<?xml version="1.0"?>
<project>
    <extend>${basedir}/../../project.xml</extend>

    <logo>/../../images/nanning.png</logo>
    <currentVersion>0.9</currentVersion>
    <groupId>nanning</groupId>
    <organization>
        <name>Jon Tirsen</name>
        <url>http://codehaus.org/</url>
        <logo>http://images.werken.com/codehaus-plain.gif</logo>
    </organization>
    <inceptionYear>2002</inceptionYear>

    <url>http://nanning.codehaus.org</url>
    <issueTrackingUrl>
        http://jira.codehaus.org/secure/BrowseProject.jspa?id=10102
    </issueTrackingUrl>

    <dependencies>

        <dependency>
            <id>commons-collections</id>
            <version>2.1</version>
        </dependency>

        <dependency>
            <id>qdox</id>
            <version>1.2</version>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.2</version>
        </dependency>

        <dependency>
            <id>commons-digester</id>
            <version>1.4.1</version>
        </dependency>

        <dependency>
            <id>commons-lang</id>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>dom4j</id>
            <version>1.4-dev-8</version>
        </dependency>

        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>

        <dependency>
            <id>ant</id>
            <version>1.5.2</version>
        </dependency>

        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>

        <dependency>
            <groupId>nanning</groupId>
            <artifactId>nanning</artifactId>
            <version>0.9</version>
        </dependency>

        <dependency>
            <id>cglib</id>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>bcel</id>
            <version>5.0</version>
        </dependency>

        <dependency>
            <id>commons-collections</id>
            <version>2.1</version>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.2</version>
        </dependency>

        <dependency>
            <id>concurrent</id>
            <version>1.3.2</version>
        </dependency>

    </dependencies>

    <build>

        <nagEmailAddress>
            tirsen@codehaus.org
        </nagEmailAddress>

        <sourceDirectory>${basedir}/src/main</sourceDirectory>

        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>

        <!-- Unit test classes -->

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
                <exclude>**/PerformanceTest.java</exclude>
                <exclude>**/BasicIdentifyingSystemGCTest.java</exclude>
                <exclude>**/SoftMapTest.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.properties</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>


        <resources>
            <directory>${basedir}/src/main</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </resources>

    </build>

    <reports>
        <report>maven-checkstyle-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>

</project>